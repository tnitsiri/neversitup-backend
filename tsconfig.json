{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*"
  ]
}